html
  head
    title Heroku Alarm Clock
  body
    h1 Heroku Alarm Clock
    hr

    h3 URL's Pings  
      small= 'Last time ping: ' + (lastPing  || '-')
    ul 
      each r in results
        li
          a(href=r.url, target='_blank')= r.url
          span= ': ' + r.response.statusCode + ' -> ' + r.response.date

